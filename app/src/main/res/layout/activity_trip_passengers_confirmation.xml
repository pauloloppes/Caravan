<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TripPassengersConfirmation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/labelConfirmationMarked"
            style="@style/DetailsLabelThemeSecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/labelConfirmationUnmarked"
            style="@style/DetailsLabelThemeSecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/labelConfirmationPercentage"
            style="@style/DetailsLabelThemeSecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:id="@+id/barConfirmationPercentage"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:max="100"
            android:progress="0"
            android:progressTint="@color/colorPrimary"
            android:scaleY="5" />

        <ListView
            android:id="@+id/listConfirmation"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </ListView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonSelectAll"
            style="@style/MainScreenButtonTheme"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:text="@string/button_selectAll" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonDeselectAll"
            style="@style/MainScreenButtonTheme"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:text="@string/button_deselectAll" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonConfirmationBack"
            style="@style/MainScreenButtonTheme"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="@string/button_back" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>