<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainScreenButtonTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="MainScreenLabelTheme">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">40dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="ListLabelThemePrimary">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListLabelThemeDark">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="ListLabelThemeSecondary">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">14dp</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="DetailsLabelThemePrimary">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="DetailsLabelThemeSecondary">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>
